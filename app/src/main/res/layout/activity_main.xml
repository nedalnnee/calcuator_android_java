<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    android:fontFamily="@font/roboto"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/calc_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/main_text_area_style"
        android:fontFamily="@font/roboto"
        android:minHeight="100dp"
        android:text=""
        android:padding="10dp"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/one"
        style="@style/button_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calc_screen"
        android:layout_alignStart="@id/calc_screen"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="1"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/two"
        style="@style/button_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/one"
        android:layout_toEndOf="@id/one"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="2"

        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/three"
        style="@style/button_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/one"
        android:layout_toEndOf="@id/two"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="3"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus"
        style="@style/button_operation"
android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/one"
        android:layout_alignEnd="@id/calc_screen"
        android:layout_toEndOf="@id/three"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="+"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/four"
        style="@style/button_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:layout_alignStart="@id/one"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="4"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/five"
        style="@style/button_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/four"
        android:layout_toEndOf="@id/four"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="5"

        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/six"
        style="@style/button_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/four"
        android:layout_toEndOf="@id/five"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="6"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minus"
        style="@style/button_operation"
android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/four"
        android:layout_alignEnd="@id/calc_screen"
        android:layout_toEndOf="@id/six"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="-"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/seven"
        style="@style/button_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/four"
        android:layout_alignStart="@id/four"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="7"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eight"
        style="@style/button_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seven"
        android:layout_toEndOf="@id/seven"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="8"

        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seven"
        style="@style/button_number"
        android:layout_toEndOf="@id/eight"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"

        android:text="9"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/multiply"
        style="@style/button_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seven"
        android:layout_alignEnd="@id/calc_screen"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/nine"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="Ã—"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear"
        style="@style/button_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seven"
        android:layout_alignStart="@id/seven"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="C"
        android:textSize="@dimen/default_text_size" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zero"
        style="@style/button_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/clear"
        android:layout_toEndOf="@id/clear"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="0"

        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dot"
        style="@style/button_operation"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/clear"
        android:layout_toEndOf="@id/zero"
        android:fontFamily="@font/roboto"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="."
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divide"
        style="@style/button_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/clear"
        android:layout_alignEnd="@id/calc_screen"
        android:layout_toEndOf="@id/dot"
        android:fontFamily="@font/roboto"
        android:layout_marginEnd="0dp"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="/"
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/equals"
        style="@style/button_operation"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear"
        android:layout_alignStart="@id/clear"
        android:layout_alignEnd="@id/dot"
        android:fontFamily="@font/roboto"
        android:layout_marginEnd="0dp"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="="
        android:textSize="@dimen/default_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteOne"
        style="@style/button_operation"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/equals"
        android:layout_alignEnd="@id/calc_screen"
        android:layout_toEndOf="@id/dot"
        android:fontFamily="@font/roboto"
        android:layout_marginEnd="0dp"
        android:minWidth="@dimen/default_min_size_width"
        android:minHeight="@dimen/default_min_size_height"
        android:text="CE"
        android:textSize="@dimen/default_text_size" />


</RelativeLayout>